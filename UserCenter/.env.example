# UserCenter Environment Configuration
# Copy this file to .env and update values

# ============ Application ============
APP_NAME=UserCenter
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=change-me-in-production-use-random-string

# ============ Database (Supabase) ============
# Format: postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Get connection string from Supabase Dashboard > Settings > Database
DATABASE_URL=postgresql+asyncpg://postgres.wdpeoyugsxqnpwwtkqsl:[YOUR-PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
DATABASE_SCHEMA=usercenter

# ============ JWT Authentication ============
# IMPORTANT: Use same JWT_SECRET_KEY across all services for SSO
JWT_SECRET_KEY=change-me-in-production-use-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ CORS ============
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]
